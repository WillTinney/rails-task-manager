<h1>LeWagon Tasklist</h1>

<% @tasks.each do |task|%>
  <ul>
    <li>

      <%= link_to(task_path(task.id, task: {completed: true}), method: :patch) do %>
        <% if task.completed %>
          <%= '[X]' %>
        <% else %>
          <%= '[ ]' %>
        <% end %>
      <% end %>
      <%= link_to task.task, task %>
      <%= link_to 'edit', edit_task_path(task.id) %>
      <%= link_to 'delete', task_path(task), method: :delete %>
    </li>
  </ul>
<%end%>

<%= link_to 'Add New Task', new_task_path %>

